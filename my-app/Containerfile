# Multi-stage build for Vite-based React frontend
# Stage 1: build the app
FROM node:18-alpine AS build
WORKDIR /my-app

# Install deps (use package-lock if present)
COPY package*.json ./
# Ensure devDependencies are installed so Vite (devDependency) is available to build
RUN npm ci --silent

# Copy source and build
COPY . .
RUN npm run build

# Stage 2: serve with nginx
FROM nginx:stable-alpine

# Pracujemy jako root, żeby ustawić uprawnienia
USER root

# Przygotuj katalogi i uprawnienia pod OpenShift (random UID w grupie 0)
RUN mkdir -p /var/cache/nginx /var/run/nginx /usr/share/nginx/html \
    && chgrp -R 0 /var/cache/nginx /var/run/nginx /etc/nginx /usr/share/nginx/html \
    && chmod -R g+rwX /var/cache/nginx /var/run/nginx /etc/nginx /usr/share/nginx/html

# Skopiuj build
COPY --from=build /my-app/dist /usr/share/nginx/html

# Skonfiguruj nginx (SPA fallback itd.)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Teraz przełączamy się na nie-root (dobrą praktyką jest jakiś "bezpieczny" UID,
# ale na OpenShift i tak zostanie nadpisany na losowy)
USER 1001

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

