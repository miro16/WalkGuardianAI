# Multi-stage build for Vite-based React frontend
# Stage 1: build the app
FROM node:18-alpine AS build
WORKDIR /my-app

# Install deps (use package-lock if present)
COPY package*.json ./
# Ensure devDependencies are installed so Vite (devDependency) is available to build
RUN npm ci --silent

# Copy source and build
COPY . .
RUN npm run build

# Stage 2: serve with nginx
FROM nginx:stable-alpine

# Copy built assets (Vite outputs to /dist)
COPY --from=build /my-app/dist /usr/share/nginx/html

# Use custom nginx config for SPA fallback and cache headers
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
